<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_medicine2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.rongchut.shuvo.shasthokothon.Starting.Medicine.MedicineActivity2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="সকালে ঃ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewName"
            android:layout_alignLeft="@+id/textViewName"
            android:layout_alignStart="@+id/textViewName"
            android:layout_marginTop="47dp"
            android:id="@+id/textViewMorning"
            android:textSize="20dp"
            android:textColor="#000000" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textViewNoon"
            android:layout_alignLeft="@+id/spinnerM"
            android:layout_alignStart="@+id/spinnerM"
            android:id="@+id/spinnerNOON" />

        <TextView
            android:text="রাতেঃ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinnerNOON"
            android:layout_alignLeft="@+id/textViewNoon"
            android:layout_alignStart="@+id/textViewNoon"
            android:layout_marginTop="73dp"
            android:id="@+id/textViewNight"
            android:textSize="20dp"
            android:textColor="#000000" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textViewNight"
            android:id="@+id/spinnerN"
            android:layout_alignLeft="@+id/spinnerNOON"
            android:layout_alignStart="@+id/spinnerNOON" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerM"
            android:layout_above="@+id/textViewNoon"
            android:layout_alignLeft="@+id/editTextName"
            android:layout_alignStart="@+id/editTextName"
            />

        <Button
            android:text="পরবর্তী"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="59dp"
            android:id="@+id/button10"
            android:layout_below="@+id/spinnerN"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="দুপুরে ঃ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="69dp"
            android:id="@+id/textViewNoon"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_below="@+id/textViewMorning"
            android:layout_alignLeft="@+id/textViewMorning"
            android:layout_alignStart="@+id/textViewMorning" />

        <TextView
            android:text="নামঃ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="41dp"
            android:id="@+id/textViewName"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextName"
            android:hint="ঔষধের নাম"
            android:layout_alignBaseline="@+id/textViewName"
            android:layout_alignBottom="@+id/textViewName"
            android:layout_toRightOf="@+id/textViewMorning"
            android:layout_toEndOf="@+id/textViewMorning" />
    </RelativeLayout>

    </ScrollView>
</RelativeLayout>
